<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controllers.SessionViewController">
    <center>
        <SplitPane dividerPositions="0.5" style="-fx-background-color: transparent;">
            <VBox spacing="15.0" style="-fx-background-color: #F0F4F8;">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Label text="BUỔI SÁNG" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>

                <VBox spacing="5.0">
                    <Label text="Các khối học áp dụng:" textFill="#7f8c8d"/>
                    <FlowPane fx:id="morningChipContainer" hgap="8.0" vgap="8.0"
                              style="-fx-background-color: transparent;"/>
                </VBox>

                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <Label text="Cấu hình thời gian:" textFill="#7f8c8d">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                    </Label>
                    <StackPane fx:id="morningGridContainer"
                               style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-padding: 15;"/>
                </VBox>
            </VBox>

            <VBox spacing="15.0" style="-fx-background-color: #FFF3E0;">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Label text="BUỔI CHIỀU" textFill="#d35400">
                    <font>
                        <Font size="18.0" name="System Bold"/>
                    </font>
                </Label>

                <VBox spacing="5.0">
                    <Label text="Các khối học áp dụng:" textFill="#7f8c8d" />
                    <FlowPane fx:id="afternoonChipContainer" hgap="8.0" vgap="8.0"
                              style="-fx-background-color: transparent;"/>
                </VBox>

                <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <Label text="Cấu hình thời gian:" textFill="#7f8c8d">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                    </Label>
                    <StackPane fx:id="afternoonGridContainer"
                               style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2); -fx-padding: 15;"/>
                </VBox>
            </VBox>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15.0"
              style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
            </padding>

            <Button onAction="#saveSessionConfig" defaultButton="true" minWidth="120.0" mnemonicParsing="false"
                    prefHeight="35.0"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"
                    text="LƯU THAY ĐỔI"/>
        </HBox>

    </bottom>
</BorderPane>