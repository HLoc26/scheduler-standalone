<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<SplitPane xmlns:fx="http://javafx.com/fxml/1" dividerPositions="0.2" prefHeight="700.0" prefWidth="1100.0"
           style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17"
           fx:controller="application.controllers.ClassConfigController">
    <VBox spacing="10.0" style="-fx-background-color: #f8f9fa;">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                   text="Danh sách Lớp học"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnAddGrade" text="+"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 30px;"
                    onAction="#handleAddGrade">
                <tooltip>
                    <Tooltip text="Thêm Khối mới"/>
                </tooltip>
            </Button>
        </HBox>
        <TextField fx:id="searchField" promptText="Tìm lớp..." style="-fx-background-radius: 15;"/>

        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;"
                    VBox.vgrow="ALWAYS">
            <Accordion fx:id="gradeAccordion"/>
        </ScrollPane>
    </VBox>
    <BorderPane style="-fx-background-color: white;">
        <top>
            <VBox spacing="15.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label fx:id="lblClassName" text="Chọn lớp để cấu hình" textFill="#2c3e50">
                        <font>
                            <Font name="System Bold" size="24.0"/>
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS"/>
                    <HBox alignment="CENTER" spacing="5.0"
                          style="-fx-background-color: #f1f5f9; -fx-background-radius: 8; -fx-padding: 4;">
                        <ToggleButton fx:id="btnMorning" mnemonicParsing="false" prefWidth="120.0"
                                      selected="true" text="Sáng (T1-5)">
                            <toggleGroup>
                                <ToggleGroup fx:id="sessionGroup"/>
                            </toggleGroup>
                            <style>
                                /* CSS Inline giả lập Tailwind logic */
                                -fx-background-color: transparent;
                                -fx-text-fill: #475569; /* slate-600 */
                                -fx-font-weight: bold;
                                -fx-background-radius: 6;
                                -fx-cursor: hand;
                            </style>
                        </ToggleButton>
                        <ToggleButton fx:id="btnAfternoon" mnemonicParsing="false" prefWidth="120.0"
                                      text="Chiều (T6-10)" toggleGroup="$sessionGroup">
                            <style>
                                -fx-background-color: transparent;
                                -fx-text-fill: #475569;
                                -fx-font-weight: bold;
                                -fx-background-radius: 6;
                                -fx-cursor: hand;
                            </style>
                        </ToggleButton>
                    </HBox>
                </HBox>
                <Separator/>
            </VBox>
        </top>
        <center>
            <VBox spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;"
                           text="Phân phối chương trình chi tiết:"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="btnAddClass" text="Thêm lớp"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                            onAction="#handleAddClass"/>
                    <Button fx:id="btnDeleteGrade" text="Xoá Khối"
                            style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-margin-left: 10px;"
                            onAction="#handleDeleteGrade"/>
                    <Button fx:id="btnDeleteClass" text="Xoá lớp"
                            style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-margin-left: 10px;"
                            onAction="#handleDeleteClass"/>
                </HBox>
                <TableView fx:id="curriculumTable" editable="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colSubject" prefWidth="250.0" text="Môn học"/>

                        <TableColumn fx:id="colPeriods" prefWidth="150.0" style="-fx-alignment: CENTER;"
                                     text="Số tiết / tuần"/>

                        <TableColumn fx:id="colDouble" prefWidth="120.0" style="-fx-alignment: CENTER;"
                                     text="Học liền (Kép)"/>

                        <TableColumn fx:id="colTeacher" prefWidth="200.0" text="Giáo viên phân công"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

            </VBox>
        </center>
        <bottom>
            <HBox alignment="CENTER_RIGHT" spacing="15.0"
                  style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
                <padding>
                    <Insets bottom="15.0" left="20.0" right="20.0" top="15.0"/>
                </padding>

                <Label fx:id="lblTotalPeriods" style="-fx-font-size: 14px; -fx-font-weight: bold;"
                       text="Tổng số tiết: 0"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnSave" defaultButton="true" minWidth="120.0" mnemonicParsing="false"
                        prefHeight="35.0"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="LƯU THAY ĐỔI"
                        onAction="#handleSave"
                />

            </HBox>
        </bottom>
    </BorderPane>
</SplitPane>